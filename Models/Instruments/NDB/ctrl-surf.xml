    <layers>

        <layer>
            <name>ctlsrf</name>
            <emissive>true</emissive>
            <w>364</w>
            <h>400</h>
            <texture>
                <path>Aircraft/777-300/Models/Instruments/NDB/NDB.png</path>
                <x1>1.0</x1>
                <y1>1.0</y1>
