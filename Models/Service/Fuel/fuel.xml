<?xml version="1.0"?>

<PropertyList>

  <path>fuel.ac</path>

  <animation>
    <type>range</type>
    <min-m>0</min-m>
    <max-property>sim/rendering/static-lod/bare</max-property>
  </animation>


   <animation>
      <type>material</type>
    <object-name>Firetruck.fuel.2_0</object-name>
    <object-name>Firetruck.fuel.2_1</object-name>
    <object-name>fueltank1_2</object-name>
	<object-name>fueltank1_1</object-name>
	<object-name>fueltank1_0</object-name>
    <object-name>Firetruck.fuel_0</object-name>
    <object-name>Firetruck.fuel_1</object-name>
    <object-name>fueltank2_2</object-name>
	<object-name>fueltank2_1</object-name>
	<object-name>fueltank2_0</object-name>
      <condition>
         <greater-than>
            <property>/sim/time/sun-angle-rad</property>
            <value>1.59</value>
         </greater-than>
      </condition>
      <global type="bool">true</global>
      <emission>
         <red>0.3</red>
         <green>0.3</green>
         <blue>0.3</blue>
      </emission>
   </animation>
   
   <animation>
      <type>material</type>
    <object-name>Firetruck.fuel.2_0</object-name>
    <object-name>Firetruck.fuel.2_1</object-name>
    <object-name>fueltank1_2</object-name>
	<object-name>fueltank1_1</object-name>
	<object-name>fueltank1_0</object-name>
    <object-name>Firetruck.fuel_0</object-name>
    <object-name>Firetruck.fuel_1</object-name>
    <object-name>fueltank2_2</object-name>
	<object-name>fueltank2_1</object-name>
	<object-name>fueltank2_0</object-name>
      <condition>
         <less-than-equals>
            <property>/sim/time/sun-angle-rad</property>
            <value>1.59</value>
         </less-than-equals>
      </condition>
      <global type="bool">true</global>
      <emission>
         <red>0</red>
         <green>0</green>
         <blue>0</blue>
      </emission>
   </animation>
  
</PropertyList>
