<!-- OSG hotspots -->

    <!-- G/S INHIBIT button -->
    <animation>
        <type>pick</type>
        <object-name>GS.ovride</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>
                  controls.click(3);
                  b777.Gpws.clicked_gs_override();
                  b777.Gpws.press_selftest_button();
                </script>
            </binding>
            <mod-up>
              <binding>
                <command>nasal</command>
                <script>
                  b777.Gpws.release_selftest_button();
                </script>
              </binding>
            </mod-up>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>GS.ovride</object-name>
        <action>
            <button>1</button> <!-- middle button to simulate long push-button press... -->
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>
                  controls.click(4);
                  b777.Gpws.clicked_selftest();
                </script>
            </binding>
        </action>
    </animation>

    <!-- FLAP OVERRIDE button -->
    <animation>
        <type>pick</type>
        <object-name>Flap.ovride</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>
                  controls.click(3);
                  b777.Gpws.clicked_flap_override();
                </script>
            </binding>
        </action>
    </animation>

    <!-- GEAR OVERRIDE button -->
    <animation>
        <type>pick</type>
        <object-name>Gear.ovride</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>
                  controls.click(3);
                  b777.Gpws.clicked_gear_override();
                </script>
            </binding>
        </action>
    </animation>

    <!-- TERRAIN INHIBIT button -->
    <animation>
        <type>pick</type>
        <object-name>Terrain.inhibit</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>
                  controls.click(3);
                  b777.Gpws.clicked_terrain_inhibit();
                </script>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>GearLever</object-name>
        <action>
            <button>1</button>
            <binding>
                <command>nasal</command>
                <script>
				if (getprop("/aaa/hydraulic/air_c1")==1 or getprop("/aaa/hydraulic/air_c2")==1 or getprop("/controls/hydraulic/system[2]/electric-pump")){				
				controls.gearDown(-1);
				}
				</script>
            </binding>
            <mod-up>
                <binding>
                    <command>nasal</command>
                    <script>controls.gearDown(0)</script>
                </binding>
            </mod-up>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>GearLever</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>nasal</command>
                <script>
				if (getprop("/aaa/hydraulic/air_c1")==1 or getprop("/aaa/hydraulic/air_c2")==1 or getprop("/controls/hydraulic/system[2]/electric-pump")){				
				controls.gearDown(1);
				}
				</script>
            </binding>
            <mod-up>
                <binding>
                    <command>nasal</command>
                    <script>controls.gearDown(0)</script>
                </binding>
            </mod-up>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>AutoBrake.knob</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-adjust</command>
                <property>autopilot/autobrake/step</property>
                <step>1</step>
                <min>-2</min>
                <max>5</max>
            </binding>
            <binding>
                <command>nasal</command>
                <script>controls.click(2);</script>
            </binding>
        </action>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>AutoBrake.knob</object-name>
        <action>
            <button>1</button>
            <binding>
                <command>property-adjust</command>
                <property>autopilot/autobrake/step</property>
                <step>-1</step>
                <min>-2</min>
                <max>5</max>
            </binding>
            <binding>
                <command>nasal</command>
                <script>controls.click(1);</script>
            </binding>
        </action>
    </animation>
	
 <!-- Emergency gear down system-->
 <animation>
   <type>rotate</type>
   <object-name>switch4.02</object-name>
	<property>/aaa/switches/switch402</property>
    <interpolation> 
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>90.0</dep>
            </entry>		
        </interpolation>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
   <center>
   <x-m>0.010</x-m>
   <y-m>0.030</y-m>
   <z-m>-0.041</z-m>
  </center>  
 </animation>

<animation>
        <type>pick</type>
   <object-name>switch4.02</object-name>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
            <command>property-toggle</command>
			<property>/aaa/switches/switch402</property>
            </binding>
		<binding>
                <command>nasal</command>
                <script>
				if (getprop("/aaa/switches/switch402")==0)
				setprop("/aaa/switches/switch401", 0);
				controls.click(2);
				</script>
         </binding>	
        </action>
    </animation>
 
	<animation>
   <type>rotate</type>
   <object-name>switch4.01</object-name>
	<property>/aaa/switches/switch401</property>
    <interpolation> 
            <entry>
                <ind>0</ind>
                <dep>-35</dep>
            </entry>
            <entry>
                <ind>1</ind>
                <dep>10</dep>
            </entry>		
        </interpolation>
   <axis>
     <x>0</x>
     <y>1</y>
     <z>0</z>
   </axis>
   <center>
   <x-m>0.006</x-m>
   <y-m>0.030</y-m>
   <z-m>-0.030</z-m>
  </center>  
 </animation>
	
	<animation>
        <type>pick</type>
		<object-name>switch4.01</object-name>	
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>nasal</command>
                <script>
				controls.click(2);
				setprop("/aaa/switches/switch401", 1);
				
				if (getprop("/systems/electrical/left-bus")>0 or getprop("/systems/electrical/right-bus")>0){				
				controls.gearDown(1);
				}
				</script>
            </binding>			
        </action>
    </animation>
	
	
</PropertyList>